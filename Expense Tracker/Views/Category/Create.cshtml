@model Expense_Tracker.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Create Category</h2>
    <a href="@Url.Action("Index")" class="btn btn-outline-light">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="glass-card">
    <div class="card-header">
        <div class="d-flex align-items-center">
            <i class="bi bi-tag me-2"></i>
            <h3 class="mb-0">New Category Details</h3>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-4">
                <label class="form-label">Category Name</label>
                <div class="input-group">
                    <span class="input-group-text bg-transparent">
                        <i class="bi bi-pencil"></i>
                    </span>
                    <input asp-for="Title" class="form-control bg-transparent" placeholder="Enter category name" />
                </div>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label class="form-label">Category Type</label>
                <div class="category-type-selector">
                    <input type="radio" class="btn-check" name="Type" id="expense" value="Expense" checked autocomplete="off">
                    <label class="btn type-btn expense-type" for="expense">
                        <i class="bi bi-arrow-down-circle"></i>
                        <span>Expense</span>
                    </label>

                    <input type="radio" class="btn-check" name="Type" id="income" value="Income" autocomplete="off">
                    <label class="btn type-btn income-type" for="income">
                        <i class="bi bi-arrow-up-circle"></i>
                        <span>Income</span>
                    </label>
                </div>
            </div>

            <div class="form-group mb-4">
                <label class="form-label">Choose Icon</label>
                <input type="hidden" asp-for="Icon" id="selectedIcon" />
                
                <div class="icons-grid" id="expenseIcons">
                    <div class="icon-item" data-icon="bi-cart">
                        <i class="bi bi-cart"></i>
                        <span>Shopping</span>
                    </div>
                    <div class="icon-item" data-icon="bi-house">
                        <i class="bi bi-house"></i>
                        <span>Housing</span>
                    </div>
                    <div class="icon-item" data-icon="bi-cup-hot">
                        <i class="bi bi-cup-hot"></i>
                        <span>Food</span>
                    </div>
                    <div class="icon-item" data-icon="bi-car-front">
                        <i class="bi bi-car-front"></i>
                        <span>Transport</span>
                    </div>
                    <div class="icon-item" data-icon="bi-heart">
                        <i class="bi bi-heart"></i>
                        <span>Health</span>
                    </div>
                    <div class="icon-item" data-icon="bi-book">
                        <i class="bi bi-book"></i>
                        <span>Education</span>
                    </div>
                    <div class="icon-item" data-icon="bi-receipt">
                        <i class="bi bi-receipt"></i>
                        <span>Bills</span>
                    </div>
                    <div class="icon-item" data-icon="bi-bag">
                        <i class="bi bi-bag"></i>
                        <span>Shopping</span>
                    </div>
                </div>

                <div class="icons-grid d-none" id="incomeIcons">
                    <div class="icon-item" data-icon="bi-wallet">
                        <i class="bi bi-wallet"></i>
                        <span>Salary</span>
                    </div>
                    <div class="icon-item" data-icon="bi-laptop">
                        <i class="bi bi-laptop"></i>
                        <span>Freelance</span>
                    </div>
                    <div class="icon-item" data-icon="bi-graph-up">
                        <i class="bi bi-graph-up"></i>
                        <span>Investment</span>
                    </div>
                    <div class="icon-item" data-icon="bi-trophy">
                        <i class="bi bi-trophy"></i>
                        <span>Bonus</span>
                    </div>
                    <div class="icon-item" data-icon="bi-building">
                        <i class="bi bi-building"></i>
                        <span>Rent</span>
                    </div>
                    <div class="icon-item" data-icon="bi-cash">
                        <i class="bi bi-cash"></i>
                        <span>Other</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-check-circle"></i> Create Category
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <style>
        .glass-card {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 16px;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .card-header {
            background: rgba(255, 255, 255, 0.05);
            padding: 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .card-body {
            padding: 1.5rem;
        }

        .category-type-selector {
            display: flex;
            gap: 1rem;
            width: 100%;
        }

        .type-btn {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            padding: 1rem;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            color: var(--bs-light);
            transition: all 0.2s ease;
        }

        .expense-type:hover, .btn-check:checked + .expense-type {
            background: rgba(var(--bs-danger-rgb), 0.2);
            border-color: var(--bs-danger);
        }

        .income-type:hover, .btn-check:checked + .income-type {
            background: rgba(var(--bs-success-rgb), 0.2);
            border-color: var(--bs-success);
        }

        .icons-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
            gap: 1rem;
            padding: 1rem;
            background: rgba(255, 255, 255, 0.02);
            border-radius: 8px;
        }

        .icon-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            background: rgba(255, 255, 255, 0.05);
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s ease;
            min-height: 100px;
        }

        .icon-item:hover {
            transform: translateY(-2px);
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.2);
        }

        .icon-item.selected {
            background: rgba(var(--bs-primary-rgb), 0.2);
            border-color: var(--bs-primary);
        }

        .icon-item i {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            color: var(--bs-light);
        }

        .icon-item span {
            font-size: 0.875rem;
            color: var(--bs-light);
            text-align: center;
        }

        .input-group-text {
            border-color: rgba(255, 255, 255, 0.1);
        }

        .form-control {
            border-color: rgba(255, 255, 255, 0.1);
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.05);
            border-color: var(--bs-primary);
            box-shadow: none;
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const expenseRadio = document.getElementById('expense');
            const incomeRadio = document.getElementById('income');
            const expenseIcons = document.getElementById('expenseIcons');
            const incomeIcons = document.getElementById('incomeIcons');
            const iconItems = document.querySelectorAll('.icon-item');
            const selectedIcon = document.getElementById('selectedIcon');

            // Toggle between expense and income icons
            expenseRadio.addEventListener('change', function() {
                if(this.checked) {
                    expenseIcons.classList.remove('d-none');
                    incomeIcons.classList.add('d-none');
                    resetSelection();
                }
            });

            incomeRadio.addEventListener('change', function() {
                if(this.checked) {
                    incomeIcons.classList.remove('d-none');
                    expenseIcons.classList.add('d-none');
                    resetSelection();
                }
            });

            // Handle icon selection
            iconItems.forEach(item => {
                item.addEventListener('click', function() {
                    iconItems.forEach(i => i.classList.remove('selected'));
                    this.classList.add('selected');
                    selectedIcon.value = this.getAttribute('data-icon');
                });
            });

            function resetSelection() {
                iconItems.forEach(item => item.classList.remove('selected'));
                selectedIcon.value = '';
            }

            // Form validation
            document.querySelector('form').addEventListener('submit', function(e) {
                if (!selectedIcon.value) {
                    e.preventDefault();
                    alert('Please select an icon for the category');
                }
            });
        });
    </script>
}
