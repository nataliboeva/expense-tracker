@model Expense_Tracker.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="d-flex justify-content-between align-items-center mb-4 animate-slide-in">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <div>
        <a asp-action="Index" class="btn btn-outline-light">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="card animate-fade-in">
    <div class="card-header">
        <h3 class="card-title">
            <i class="bi bi-tag"></i> New Category Details
        </h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" id="categoryForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-4">
                <label asp-for="Title" class="form-label">Category Name</label>
                <input asp-for="Title" class="form-control" placeholder="Enter category name" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-4">
                <label class="form-label d-block">Category Type</label>
                <div class="d-flex gap-4">
                    <div class="form-check">
                        <input type="radio" class="form-check-input" name="Type" value="Expense" id="typeExpense" checked />
                        <label class="form-check-label" for="typeExpense">
                            <i class="bi bi-arrow-down-circle text-danger me-1"></i>
                            Expense
                        </label>
                    </div>
                    <div class="form-check">
                        <input type="radio" class="form-check-input" name="Type" value="Income" id="typeIncome" />
                        <label class="form-check-label" for="typeIncome">
                            <i class="bi bi-arrow-up-circle text-success me-1"></i>
                            Income
                        </label>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check"></i> Create Category
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <style>
        .form-check-input {
            cursor: pointer;
            width: 1.2em;
            height: 1.2em;
        }
        
        .form-check-input:checked {
            background-color: var(--accent-primary);
            border-color: var(--accent-primary);
        }
        
        .form-check-label {
            cursor: pointer;
            font-size: 1.1em;
            display: flex;
            align-items: center;
        }
    </style>
}
