@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="card error-card">
    <div class="card-header">
        <h3 class="card-title">
            <i class="bi bi-exclamation-triangle-fill text-warning me-2"></i>
            An error occurred
        </h3>
    </div>
    <div class="card-body">
        <div class="text-center mb-4">
            <div style="font-size: 100px;" class="text-danger">
                <i class="bi bi-emoji-frown error-icon"></i>
            </div>
            <h2 class="mt-4">We're sorry!</h2>
            
            @if (!string.IsNullOrEmpty(Model?.Message))
            {
                <div class="alert alert-danger mt-4">
                    @Model.Message
                </div>
            }
            else
            {
                <p class="text-muted">Something went wrong while processing your request.</p>
            }

            @if (Model?.ShowRequestId ?? false)
            {
                <div class="text-muted mt-4">
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </div>
            }
        </div>
        
        <div class="text-center mt-4">
            <div class="d-flex gap-3 justify-content-center">
                <a href="javascript:history.back()" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left"></i> Go Back
                </a>
                <a asp-controller="Transaction" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-house"></i> Go To Transactions
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .error-card {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 16px;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            animation: slideIn 0.5s ease-out;
        }

        .error-icon {
            animation: pulse 2s infinite;
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.1);
            }
            100% {
                transform: scale(1);
            }
        }

        .card-header {
            background: rgba(255, 255, 255, 0.05);
            padding: 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .card-body {
            padding: 1.5rem;
        }

        .alert-danger {
            background: rgba(220, 53, 69, 0.1);
            border-color: rgba(220, 53, 69, 0.2);
            color: #ff6b6b;
        }

        .btn-outline-light:hover {
            background: rgba(255, 255, 255, 0.1);
        }
    </style>
}

@section Scripts {
    <script>
        // No JavaScript needed anymore as we're using pure CSS animations
    </script>
}
