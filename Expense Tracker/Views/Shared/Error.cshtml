@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="card animate-fade-in">
    <div class="card-header">
        <h3 class="card-title">
            <i class="bi bi-exclamation-triangle-fill text-warning me-2"></i>
            An error occurred
        </h3>
    </div>
    <div class="card-body">
        <div class="text-center mb-4">
            <div style="font-size: 100px;" class="text-danger">
                <i class="bi bi-emoji-frown"></i>
            </div>
            <h2 class="mt-4">We're sorry!</h2>
            <p class="text-muted">Something went wrong while processing your request.</p>
            
            @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger mt-4">
                    <strong>Error details:</strong> @ViewBag.ErrorMessage
                </div>
            }

            @if (Model?.ShowRequestId ?? false)
            {
                <div class="text-muted mt-4">
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </div>
            }
        </div>
        
        <div class="text-center mt-4">
            <div class="d-flex gap-3 justify-content-center">
                <a href="javascript:history.back()" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left"></i> Go Back
                </a>
                <a asp-controller="Transaction" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-house"></i> Go To Transactions
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add animation to the error icon
            const errorIcon = document.querySelector('.bi-emoji-frown');
            errorIcon.style.animation = 'pulse 2s infinite';
        });
    </script>
}
